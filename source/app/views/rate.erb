<% if session[:user_id] %>
  <center>
    <img src="<%= @user.image_url %>", alt="user image">


    <div class="rate_form">
      <form method="post" action="/rate">
        <input type="hidden" name="user_id" value="<%=@sampled_user.id%>">
        <input type="hidden" name="question_id" value="<%=@sampled_question.id%>">
        <div class = "question">
          <%=@sampled_question.question%>
        </div>
        <span class="slider_attrs"><%=@sampled_question.endpoint1%> <input type="range" name="slider_points" min="1" max="100"> <%=@sampled_question.endpoint2%></span><br>
        <input class="submit_button" type="submit" value="Stereotype!">
      </form>
    </div>

  </center>
<% end %>
